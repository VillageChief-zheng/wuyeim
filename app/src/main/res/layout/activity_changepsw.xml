<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/projectthem"
    >
    <!--输入框-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dap15"
        android:layout_marginRight="@dimen/dap15"
        android:layout_marginTop="@dimen/dp_100"
         >

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_graysuo"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/et_oldpsw"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dap10"
            android:layout_marginLeft="@dimen/dap10"
            android:layout_marginRight="35dp"
            android:layout_toEndOf="@+id/icon2"
            android:layout_toRightOf="@+id/icon2"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#FF717486"
            android:maxLines="16"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#FF393D4D"
        android:layout_marginLeft="@dimen/dap10"
        android:layout_marginRight="@dimen/dap10"
        ></View>
    <!--输入框-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dap15"
        android:layout_marginRight="@dimen/dap15"
        android:layout_marginTop="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_graysuo"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/et_newpsw"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dap10"
            android:layout_marginLeft="@dimen/dap10"
            android:layout_marginRight="35dp"
            android:layout_toEndOf="@+id/icon3"
            android:layout_toRightOf="@+id/icon3"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#FF717486"
            android:maxLines="16"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#FF393D4D"
        android:layout_marginLeft="@dimen/dap10"
        android:layout_marginRight="@dimen/dap10"
        ></View>
    <!--输入框-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dap15"
        android:layout_marginRight="@dimen/dap15"
        android:layout_marginTop="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_graysuo"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/et_configpsw"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dap10"
            android:layout_marginLeft="@dimen/dap10"
            android:layout_marginRight="35dp"
            android:layout_toEndOf="@+id/icon4"
            android:layout_toRightOf="@+id/icon4"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="#FF717486"
            android:maxLines="16"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#FF393D4D"
        android:layout_marginLeft="@dimen/dap15"
        android:layout_marginRight="@dimen/dap15"
        ></View>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap50"
        android:text="保存"
        android:background="@drawable/fillet_grbg"
        android:textColor="@color/white"
        android:textSize="@dimen/textsp18"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dap26"
        android:layout_marginRight="@dimen/dap26"
        android:id="@+id/bt_submit"

        />
</LinearLayout>
