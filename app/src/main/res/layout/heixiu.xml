            imagecontrol:border_outside_color="#FF221F32"
            imagecontrol:border_thickness="1dp" />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:id="@+id/byt"

        />
