<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_blackshape"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap50"
        android:text="选择支付方式"
        android:gravity="left|center"
        android:textSize="@dimen/sp_16"
        android:textColor="#FF000000"
       android:layout_marginLeft="@dimen/dap20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dap50"
        android:text="  微信     "
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:textColor="#FF000000"
        android:id="@+id/pay_wx"
        android:drawableLeft="@mipmap/ic_wchat"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFEBEBEB"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dap50"
        android:text="  支付宝"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="#FF000000"
        android:id="@+id/pay_zfb"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_ali"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFEBEBEB"
        /><View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_8"
    android:background="#FFF0F0F0"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap50"
        android:text="取消"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="#FF000000"
        android:id="@+id/tv_cancle"

        />
</LinearLayout>
