<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="#FF191725"
      >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:src="@mipmap/ic_dui"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/dap50"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF775EFF"
        android:textSize="@dimen/sp_18"
        android:text="恭喜您充值成功！"
        android:layout_gravity="center_horizontal"
     android:layout_marginTop="@dimen/dap10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_ff99"
        android:textSize="@dimen/sp_14"
        android:text="  账户余额："
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dap10"
        android:drawableLeft="@mipmap/ic_topjinbi"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap50"
        android:text="返回"
        android:background="@drawable/cir_them_shape"
        android:textColor="#FF775EFF"
        android:textSize="@dimen/textsp18"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dap26"
        android:layout_marginRight="@dimen/dap26"
        android:id="@+id/bt_finsh"

        />
</LinearLayout>
