<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#191725"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="聊天"
                android:layout_centerInParent="true"

                />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="47dp"
    android:text=" 客服"
    android:drawableLeft="@mipmap/ic_kfuo"
    android:textSize="16sp"
    android:textColor="#B6A8FF"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/dap10"
    android:id="@+id/kfu"
    />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_ff393D"
                 android:layout_below="@+id/kfu"
                />
        </RelativeLayout>

    </FrameLayout>
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       >


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:gravity="center"
           android:id="@+id/syssm"


           >
           <com.chaychan.library.BottomBarLayout
               android:id="@+id/bottom_navigation_bar2"
               android:layout_width="65dp"
               android:layout_height="65dp"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_alignParentBottom="true"
               android:background="#191725"
               android:layout_marginLeft="@dimen/pad_10"
               >

               <com.chaychan.library.BottomBarItem
                   android:layout_width="49.35dp"
                    android:layout_height="55dp"
                   app:iconNormal="@mipmap/ic_sysitem"
                   app:iconSelected="@mipmap/ic_sysitem"
                    app:itemTextSize="9sp"
                   app:itemMarginTop="2dp"
                   app:textColorNormal="#FF7C72AD"
                   app:textColorSelected="@color/white"
                   />
           </com.chaychan.library.BottomBarLayout>

           <TextView
               android:id="@+id/tv_ziti"
               android:textSize="@dimen/sp_16"
               android:textColor="@color/white"
               android:layout_weight="1"
               android:layout_marginLeft="@dimen/dp_10"
               android:gravity="center_vertical"
               android:layout_width="wrap_content"
               android:text="系统消息"
               android:layout_height="match_parent" />

       </LinearLayout>
   </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.tencent.qcloud.tim.uikit.modules.conversation.ConversationLayout
        android:id="@+id/conversation_layout"
          android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    </FrameLayout>
</LinearLayout>
