<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/pad_240"
       android:background="@drawable/myheader_shape"
       android:id="@+id/rl_my"

       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:layout_centerVertical="true"
            android:id="@+id/rl_editinfo"
           android:layout_marginLeft="@dimen/dap15"

            >

           <ImageView
               android:id="@+id/clock"
               android:layout_width="@dimen/dp_72"
               android:layout_height="@dimen/dp_72"
               android:layout_centerVertical="true"
                android:src="@mipmap/defal_head"

               />

           <TextView
               android:id="@+id/tv_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignTop="@+id/clock"
               android:layout_marginLeft="@dimen/dap10"
               android:layout_marginTop="@dimen/dap4"
               android:layout_toRightOf="@id/clock"
               android:textColor="@color/white"
               android:textSize="@dimen/textsp17"
               android:textStyle="bold"
               android:text=" "
                />

           <TextView
               android:id="@+id/tv_singe"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tv_name"
               android:layout_alignLeft="@+id/tv_name"
               android:layout_marginTop="@dimen/dap10"
               android:textColor="#FFB6A8FF"
               android:textSize="@dimen/textsp14"
               android:maxLines="2"
               android:ellipsize="end"
                 android:text="我是爱设计的我是爱设计的"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="个人主页"
               android:layout_alignParentRight="true"
               android:background="@mipmap/bg_zhuye"
               android:textSize="@dimen/textsp13"
               android:textColor="@color/white"
               android:gravity="center"
               android:id="@+id/tv_myinfo"
               />
       </RelativeLayout>

   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/pad_15"
        android:layout_marginRight="@dimen/pad_15"
        android:background="@drawable/myheader_blackshape"
        android:layout_marginTop="-30dp"
        android:id="@+id/ll_xinxi"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/ll_love"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="— —"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:id="@+id/tv_mylove"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:text="我的关注"
                android:textColor="@color/text_ff99"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/ll_fins"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="— —"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:id="@+id/tv_myfans"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:text="我的粉丝"
                android:textColor="@color/text_ff99"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="— —"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:id="@+id/jinbi"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:text="我的金币"
                android:textColor="@color/text_ff99"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap70"
        android:layout_marginTop="@dimen/dap10"
        android:background="@drawable/firsttop_shape"
        android:layout_marginLeft="@dimen/pad_15"
        android:layout_marginRight="@dimen/pad_15"
        android:orientation="vertical"
        android:id="@+id/rl_firsttop"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_myjinbi"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="center|left"

        />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:text="充值特惠"
       android:textColor="#FF5A2902"
        android:textSize="@dimen/textsp13"
       android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
       />
</LinearLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="35dp">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginLeft="@dimen/dp_10"
         android:gravity="center|left"
         android:textSize="@dimen/sp_15"
         android:textColor="#FF5A2902"
         android:text="爆！充值送豪礼，限时抢购！"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:text="立即查看  "
         android:textColor="#FF8B5934"
         android:textSize="@dimen/textsp13"
         android:gravity="center"
         android:layout_alignParentRight="true"
         android:drawableRight="@mipmap/ic_jinright"
         android:layout_marginRight="@dimen/dap5"
         />
 </RelativeLayout>
    </LinearLayout>
</LinearLayout>
