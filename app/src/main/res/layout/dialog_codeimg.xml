<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:orientation="vertical"
     android:background="@drawable/dialogfor_imgcode"
    android:layout_margin="@dimen/dap6"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="请输入验证码"
    android:gravity="center"
    android:textColor="#FF000000"
    android:textSize="@dimen/sp_18"
    />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dap50"
    android:layout_marginLeft="@dimen/pad_20"
    android:layout_marginRight="@dimen/pad_20"
    android:background="@drawable/dailogimgcodefored"
    android:layout_marginTop="@dimen/pad_20"
    >
<EditText
    android:layout_width="@dimen/pad_100"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center|left"
    android:hint="请输入"
    android:layout_marginLeft="@dimen/dap5"
    android:id="@+id/ed_imgcode"
    android:maxEms="6"
    />
  <ImageView
    android:layout_width="84dp"
    android:layout_height="wrap_content"
    android:id="@+id/imgcode"
    android:layout_alignParentRight="true"
    android:layout_margin="@dimen/dap5"
     />
</RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap50"
        android:text="确定"
        android:background="@drawable/fillet_graybg"
        android:textColor="@color/white"
        android:textSize="@dimen/textsp18"
        android:layout_marginTop="@dimen/dap40"
        android:layout_marginLeft="@dimen/dap26"
        android:layout_marginRight="@dimen/dap26"
        android:id="@+id/bt_submit"
          />

</LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_gb"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pad_10"
        android:id="@+id/img_gb"
        />
</LinearLayout>
