<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF191725"
    android:orientation="vertical"
    >
    <com.chuange.basemodule.view.NavigationTopView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleName="关注公众号"
        app:bgColor="#FF191725"
        android:id="@+id/topView"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dap15"
        android:layout_marginRight="@dimen/dap15"
        >
    <TextView
        android:id="@+id/tvbindphone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dap30"
        android:text="因微信官方升级，部分用户需重新关注公众号"
        android:textSize="@dimen/textsp17"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:gravity="left"/>
        <TextView
             android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dap10"
            android:text="1、把该页面截图，然后发送到微信中，打开该图片，长按识别关注即可。"
            android:textSize="@dimen/textsp14"
            android:textColor="#C3C3C3"
            android:layout_height="wrap_content"
            android:gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dap10"
            android:text="2、复制微信号: mimipiaoliup去微信搜索关注，打开微信，选择'右上角+号'->“添加朋友”->“公众号”->然后搜索复制的内容，关注XXXX公众号即可。"
            android:textSize="@dimen/textsp14"
            android:textColor="#C3C3C3"
            android:layout_height="wrap_content"
            android:gravity="left"/>
        <Button
            android:layout_width="@dimen/dap150"
            android:layout_height="@dimen/dap50"
            android:text="立即复制"
            android:background="@drawable/loginbuttonbg"
            android:textColor="#B6A8FF"
            android:textSize="@dimen/textsp18"
            android:layout_marginTop="@dimen/dap30"
            android:layout_marginLeft="@dimen/dap26"
            android:layout_marginRight="@dimen/dap26"
            android:id="@+id/tvfuzhi"
            android:layout_gravity="center"
            />
    <ImageView
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dap30"
        android:src="@mipmap/ceshi"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dap20"
            android:text="秘密漂流瓶公众号"
            android:textSize="@dimen/textsp15"
            android:textColor="#C3C3C3"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dap50"
            android:text="已关注，下一步"
            android:background="@drawable/fillet_grbg"
            android:textColor="@color/white"
            android:textSize="@dimen/textsp18"
            android:layout_marginTop="@dimen/dap20"
            android:layout_marginLeft="@dimen/dap26"
            android:layout_marginRight="@dimen/dap26"
            android:id="@+id/bt_next"
            />
    </LinearLayout>
</LinearLayout>
