<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dap10"
    android:layout_marginRight="@dimen/dap10"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/im_header"
            />
        <TextView
            android:id="@+id/tv_inlin"
            android:layout_width="@dimen/dap30"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="在线"
            android:layout_marginTop="-13dp"
            android:textSize="@dimen/textsp9"
            android:textColor="@color/white"
            android:background="@drawable/inlin_sahpe"
            android:padding="@dimen/dap1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsp15"
            android:textColor="@color/text_ffA7A3"
            android:text="少年的我 "
            android:drawableRight="@mipmap/ic_nv"
            android:id="@+id/tv_name"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_pingzi"
        />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dap10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap30"
        android:background="@drawable/drift_content"
         >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:ellipsize="end"
          android:textSize="@dimen/textsp14"
          android:textColor="@color/text_ffB6A8"
           android:text="  sjaikdjskla"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/dap17"
          android:drawableLeft="@mipmap/ic_yuyin"
          android:id="@+id/tv_drif_content"
          android:visibility="gone"
          />
  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:ellipsize="end"
          android:textSize="@dimen/textsp14"
          android:textColor="@color/text_ffB6A8"
           android:text="  sjaikdjskla"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/dap17"
           android:id="@+id/tv_drif_contents"

          />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dap_5"
        android:background="@color/text_ff393D"
        android:layout_marginTop="@dimen/dap15"
        />
</LinearLayout>
